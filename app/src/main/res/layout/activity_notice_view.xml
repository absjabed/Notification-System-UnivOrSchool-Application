<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notice_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="#00796B"
    tools:context="com.absjbd.pciu_notice_board.Activity.NoticeViewActivity">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <ScrollView
        android:id="@+id/scrollView1"
        android:paddingTop="5dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:gravity="center"
                android:text="Notice Subject:"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>

            <TextView
                android:id="@+id/noticeView_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Course Registration of All Programs for Spring-2018 Trimester"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notice Body:"
                android:textStyle="bold|italic"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>
            <TextView
                android:id="@+id/noticeView_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dammyNotice"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ref No:"
                android:textStyle="bold|italic"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>
            <TextView
                android:id="@+id/noticeView_refNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PCIU/REG 17 10/27 01"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="Date:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>
            <TextView
                android:id="@+id/noticeView_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="October 27, 2017"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notice To:"
                android:textStyle="bold|italic"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>
            <TextView
                android:id="@+id/noticeView_noticeTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="All Concerned"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notice From:"
                android:textStyle="bold|italic"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="#FFEB3B"/>
            <TextView
                android:id="@+id/noticeView_noticeFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Office of the Registrar"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#E0F2F1"/>


            </LinearLayout>
    </ScrollView>
</LinearLayout>
