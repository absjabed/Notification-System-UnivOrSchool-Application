<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#00796B"
    tools:context="com.absjbd.pciu_notice_board.Activity.RegisterActivity">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <com.beardedhen.androidbootstrap.BootstrapWell
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:bootstrapSize="xs">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </com.beardedhen.androidbootstrap.BootstrapWell>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Student Name*"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentNameET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:hint="i.e: your name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Address"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentAddressET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:hint="i.e: your address"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Email address*"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentEmailET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:hint="i.e: email@mail.com"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Phone number*"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentPhoneET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:hint="i.e: 0167*****64"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Department*"
                android:gravity="center_horizontal"/>

            <com.beardedhen.androidbootstrap.BootstrapDropDown
                android:id="@+id/departmentDDL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="secondary"
                app:bootstrapExpandDirection="down"
                app:bootstrapSize="md"
                android:textStyle="bold"
                app:bootstrapText="Select your department"
                app:dropdownResource="@array/dept_name"
                app:roundedCorners="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Batch ID*"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentBatchET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:inputType="text"
                android:hint="i.e: CSE001"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Student ID*"
                android:gravity="center_horizontal"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/studentIdET"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="true"
                android:inputType="text"
                android:textColor="#000000"
                android:hint="i.e: CSE00105137"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <com.beardedhen.androidbootstrap.BootstrapLabel
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:labelFor="@+id/passwordETR"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Enter new Password*"/>
            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/newPasswordET"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:inputType="textPassword"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                app:bootstrapBrand="success"
                app:bootstrapHeading="h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:labelFor="@+id/passwordReETR"
                android:gravity="center"
                android:textStyle="bold"
                android:text="re - Enter Password*"/>
            <com.beardedhen.androidbootstrap.BootstrapEditText
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                android:id="@+id/rePasswordET"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:inputType="textPassword"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                app:bootstrapBrand="danger"
                app:roundedCorners="true"
                app:showOutline="false"
                android:id="@+id/registerBtn"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:onClick="onClickRegisterBtn"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:text="Register"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
