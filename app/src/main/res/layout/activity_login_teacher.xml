<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00796B"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.absjbd.pciu_notice_board.Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar_main2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/pciu_logo" />

            <!--<com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginTop="5dp"
                app:bootstrapBrand="regular"
                app:bootstrapHeading="h6"
                android:textStyle="bold"
                android:text="Department"
                android:gravity="center_horizontal"/>

            <com.beardedhen.androidbootstrap.BootstrapDropDown
                android:id="@+id/departmentDDL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:bootstrapBrand="secondary"
                app:bootstrapExpandDirection="down"
                app:bootstrapSize="md"
                android:textStyle="bold"
                app:bootstrapText="Select your department"
                app:dropdownResource="@array/bootstrap_dropdown_example_data"
                app:roundedCorners="true"
                />-->

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Teacher ID"
                android:textStyle="bold"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h6" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/teacherIdET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ellipsize="start"
                android:hint="i.e: dept.teacher_id"
                android:textColor="#000000"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:labelFor="@+id/ETReportphoneemail"
                android:text="Password"
                android:textStyle="bold"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h6" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/teacherPasswordET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/loginTBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:onClick="TeacherLoginBtnClick"
                android:text="Login"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/registerTBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:onClick="TeacherRegisterBtnClick"
                android:text="Register"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:bootstrapBrand="danger"
                app:roundedCorners="true"
                app:showOutline="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:onClick="TeacherForgotPasswordClick"
                android:text="Forgot password?"
                android:textColor="@color/bootstrap_brand_warning"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
